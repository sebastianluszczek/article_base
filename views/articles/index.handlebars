<h1>Articles</h1>
<div class="row">
    {{#each articles}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{#if user}}
                {{{editIcon user.id ../user.id id}}}
                {{/if}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p class="story-text">{{stripTags (truncate body 100)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}">
                    <a href="/articles/user/{{user.id}}">
                        {{user.firstName}} {{user.lastName}}
                    </a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/articles/show/{{id}}" class="btn grey">Read more</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No articles found</p>
    {{/each}}
</div>